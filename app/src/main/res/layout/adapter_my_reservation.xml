<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/btn_reservation_history_bg">

    <RelativeLayout
        android:id="@+id/remind_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <!--        android:background="@drawable/background_noti_dark"-->

        <LinearLayout
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:includeFontPadding="false"
                android:text="MAY"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="-7dp"
                android:text="15"
                android:textColor="@color/colorPrimary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:includeFontPadding="false"
                android:text="5.00pm"

                android:textColor="@color/colorPrimary"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/date_label"
            android:orientation="vertical">


            <TextView
                android:id="@+id/remind_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room type : 1   Room pax : 4 pax"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/remind_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room pax : 4 pax"
                android:visibility="gone"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/remindaae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Reservation # 100001"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/remind_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="EXPIRED"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>